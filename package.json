{
  "name": "guidebook",
  "private": true,
  "scripts": {
    "dev": "concurrently -n frontend,backend -c cyan,magenta \"bun run dev:frontend\" \"bun run dev:backend\"",
    "dev:frontend": "bun run --filter frontend dev",
    "dev:backend": "bun run --filter backend dev",
    "lint": "bun run --filter frontend lint && bun run --filter backend lint",
    "format": "bun run --filter frontend format && bun run --filter backend format",
    "docker:build-frontend": "docker build -f frontend/Dockerfile -t guidebook-frontend:latest .",
    "docker:build-backend": "docker build -f backend/Dockerfile -t guidebook-backend:latest .",
    "docker:build-all": "bun run docker:build-frontend && bun run docker:build-backend",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:mongo": "docker-compose up -d mongodb",
    "docker:mongo-down": "docker-compose stop mongodb",
    "docker:push": "bun run scripts/push-images.ts",
    "docker:push-amd64": "bun run scripts/push-images-amd64.ts",
    "deploy:prepare": "bun run scripts/prepare-manifests.ts"
  },
  "workspaces": [
    "frontend",
    "backend",
    "models"
  ],
  "devDependencies": {
    "@peterek/vite-plugin-favicons": "^2.1.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.8.1"
  }
}
